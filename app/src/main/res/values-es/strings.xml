<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Title for the application. [CHAR LIMIT=12] -->
    <string name="app_name">Sólo Java</string>

    <!-- Hint text display in the empty field for the user's name [CHAR LIMIT=20] -->
    <string name="hint_name">Nombre</string>

    <!-- Header text for the list of toppings [CHAR LIMIT=20] -->
    <string name="toppings">Ingredientes</string>

    <!-- The whipped cream toppings checkbox [CHAR LIMIT=NONE]-->
    <string name="whipped_cream_checkbox">Crema batida</string>

    <!-- The chocolate toppings checkbox [CHAR LIMIT=NONE]-->
    <string name="chocolate_checkbox">Chocolate</string>

    <!-- Header text for quantity of coffee {CHAR LIMIT=NONE]-->
    <string name="quantity">Cantidad</string>

    <!-- Initial value of quantity [CHAR LIMIT=NONE] -->
    <string name="initial_quantity">2</string>

    <!-- Total price of coffee [CHAR LIMIT=NONE] -->
    <string name="initial_total_price">$10</string>

    <!-- The order checkbox [CHAR LIMIT=NONE] -->
    <string name="order">Ordenar</string>

    <!-- The user's name for the order summary [CHAR LIMIT=NONE] -->
    <string name="order_summary_name">Nombre: <xliff:g id="userName" example="Amy">%s</xliff:g></string>

    <!-- Ask user if they want to add whipped cream? [CHAR LIMIT=NONE]-->
    <string name="order_summary_whipped_cream">Agregue la crema batida? <xliff:g id="addWhippedCream" example="true">%s</xliff:g></string>

    <!-- Ask user if they want to add chocolate? [CHAR LIMIT=NONE]-->
    <string name="order_summary_chocolate">Agregue el chocolate? <xliff:g id="addChocolate" example="true">%s</xliff:g></string>

    <!-- This a string of yes, used when user wants a topping [CHAR LIMIT=NONE] -->
    <string name="yes">Yes</string>
    <!-- This a string of no, used when user dont want a topping [CHAR LIMIT=NONE] -->
    <string name="no">No</string>

    <!-- Display quantity of coffee [CHAR LIMIT=NONE]-->
    <string name="order_summary_quantity">Cantidad: <xliff:g id="quantity" example="2">%d</xliff:g></string>

    <!-- Display total price of coffee [CHAR LIMIT=NONE] -->
    <string name="order_summary_price">Total: <xliff:g id="price" example="$10">%s</xliff:g></string>

    <!-- Thank you message for the order summary. [CHAR LIMIT=NONE] -->
    <string name="thank_you">¡Gracias!</string>

    <!--
      Subject line for the order summary email. It will be in the format of
      "Just Java order for Amy" where Amy is the user's name. [CHAR LIMIT=NONE]
    -->
    <string name="order_summary_email_subject">Sólo java para <xliff:g id="userName" example="Amy">%s</xliff:g></string>

    <!-- This message appear when user try to order more than 100 cups of coffees [CHAR LIMIT=NONE] -->
    <string name="not_more_than_100">No se pueden pedir más de 100 cafés.</string>

    <!-- This message appeat when user try to order less than 1 cup of coffee [CHAR LIMIT=NONE] -->
    <string name="not_less_than_1">No se pueden pedir menos de 1 café.</string>
</resources>